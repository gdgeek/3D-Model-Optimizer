{
  "name": "3d-model-optimizer",
  "version": "1.0.0",
  "description": "3D Model Optimizer - Node.js server for optimizing 3D model files with RESTful API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "glb",
    "gltf",
    "3d",
    "optimization",
    "draco",
    "meshoptimizer",
    "texture-compression"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@gltf-transform/core": "^4.1.1",
    "@gltf-transform/extensions": "^4.1.1",
    "@gltf-transform/functions": "^4.1.1",
    "@types/cors": "^2.8.19",
    "cors": "^2.8.6",
    "draco3d": "^1.5.7",
    "express": "^4.21.0",
    "meshoptimizer": "^1.0.1",
    "multer": "^1.4.5-lts.1",
    "obj2gltf": "^3.2.0",
    "sharp": "^0.34.5",
    "stl-reader": "^3.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.9.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "fast-check": "^3.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
